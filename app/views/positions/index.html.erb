<p id="notice"><%= notice %></p>

<h1>Справочник должностей</h1>

<table>
  <thead>
    <tr>
      <th>Должность</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= position.comment %></td>
        <td><%= link_to 'Показать', position %></td>
        <td><%= link_to 'Редактировать', edit_position_path(position) %></td>
        <td><%= link_to 'Удалить', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить должность', new_position_path %><br>
